{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": false,
  "sourceRoot": "src",
  "entryFile": "main",
  "language": "ts",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "manualRestart": true,
    "tsConfigPath": "./tsconfig.build.json",
    "webpack": false,
    "deleteOutDir": true,
    "assets": [],
    "watchAssets": false,
    "plugins": []
  },
  "database": {
    "type": "postgres",
    "host": "postgresdb",
    "port": 5432,
    "username": "postgres",
    "password": "12345678",
    "database": "postgresdb"
  }
}
